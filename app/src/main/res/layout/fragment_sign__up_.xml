<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Sign_Up_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="25dp"
            android:text="SignUp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/logo"/>

        <EditText
            android:id="@+id/UserName_EditText"
            android:layout_width="376dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:hint="UserName"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/person_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/regularroboto"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/Age_EditText"
            android:layout_width="376dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Age"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/regularroboto"
            android:drawableStart="@drawable/age_icon"
            android:drawablePadding="10dp"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/gender_EditText"
            android:layout_width="376dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Gender"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/regularroboto"
            android:drawableStart="@drawable/gender_icon"
            android:drawablePadding="10dp"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp"
            android:inputType="text" />
        <EditText
            android:id="@+id/Email_EditText"
            android:layout_width="376dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/regularroboto"
            android:drawableStart="@drawable/email_logo"
            android:drawablePadding="10dp"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/Password_EditText"
            android:layout_width="376dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Password"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:fontFamily="@font/regularroboto"
            android:drawableStart="@drawable/age_icon"
            android:drawablePadding="10dp"
            android:textColorHint="@color/darkblue"
            android:textSize="16sp"
            android:inputType="number" />
        <Button
            android:id="@+id/gotosign_in"
            android:layout_width="380dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:text="Continue"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/pink"
            android:textSize="12dp">
        </Button>
    </LinearLayout>
</FrameLayout>