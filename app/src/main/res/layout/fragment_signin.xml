<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signin"
        tools:context=".fragments.Signin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="25dp"
            android:text="Sign In"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo"/>

            <EditText
                android:id="@+id/Email_EditText"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Email"
                android:layout_gravity="center"
                android:paddingStart="16dp"
                android:drawableStart="@drawable/email_logo"
                android:drawablePadding="10dp"
                android:layout_marginTop="216dp"
                android:textColorHint="@color/darkblue"
                android:textSize="16sp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/Password_EditText"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Password"
                android:layout_gravity="center"
                android:paddingStart="16dp"
                android:drawableEnd="@drawable/password_eye"
                android:drawablePadding="10dp"
                android:layout_marginTop="16dp"
                android:paddingEnd="10dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:textColorHint="@color/darkblue"
                android:textSize="16sp"
                android:inputType="textPassword" /> <!-- Change to textPassword -->

            <Button
                android:id="@+id/continue_btn"
                android:layout_width="350dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_edittext"
                android:text="Continue"
                android:backgroundTint="@color/pink"
                android:textSize="12sp"/> <!-- Change from dp to sp -->

            <TextView
                android:id="@+id/SignUp_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User? Sign Up here"
                android:textSize="20sp"
            android:layout_gravity="center"/>

        </LinearLayout>

    </FrameLayout>
