<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.ReportAnalysisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button_logo"
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:src="@drawable/back_arrow_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SakshamSevak"
                android:textColor="@color/darkblue"
                android:textSize="26dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ImageView to add image and display selected image -->
        <ImageView
            android:id="@+id/add_image"
            android:layout_width="340dp"
            android:layout_height="203dp"
            android:src="@drawable/add_image"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:visibility="visible"/> <!-- Initially visible -->

        <ImageView
            android:id="@+id/selected_image"
            android:layout_width="380dp"
            android:layout_height="203dp"
            android:layout_gravity="center"
            android:visibility="gone"
        android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/record_analysis_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/record_analysis"/>

    </LinearLayout>

</FrameLayout>
